<h1>Listing patrons</h1>

<table>
  <tr>
    <th>Library card</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Contact phone</th>
    <th>Contact email</th>
    <th>Patron staff notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patrons.each do |patron| %>
  <tr>
    <td><%= patron.library_card %></td>
    <td><%= patron.first_name %></td>
    <td><%= patron.last_name %></td>
    <td><%= patron.contact_phone %></td>
    <td><%= patron.contact_email %></td>
    <td><%= patron.patron_staff_notes %></td>
    <td><%= link_to 'Show', patron %></td>
    <td><%= link_to 'Edit', edit_patron_path(patron) %></td>
    <td><%= link_to 'Destroy', patron, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

